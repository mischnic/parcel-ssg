<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>{{ title }}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" type="text/css" href="style.css" />
  </head>
  <body>
    <nav>
      Pages:
      <ul>
        {% ssg %}
          {%- for page in collections.all -%}
          <li>
            {% if page.data.icon %}
              <img src="{{ iconset[page.data.icon] }}" alt="">
            {% endif %}
            <a href="{{ page.url }}">{{ page.data.title }}</a>
          </li>
          {%- endfor -%}
        {% endssg %}
      </ul>
      {% if toc %}
        Table of Contents:
        {{ toc | safe }}
      {% endif %}
    </nav>
    <main>
      <h1>{{ title }}</h1>
      {{ content | safe }}
    </main>
  </body>
</html>
